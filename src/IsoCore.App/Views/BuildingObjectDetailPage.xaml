<?xml version="1.0" encoding="utf-8"?>
<views:MenuPage
    x:Class="IsoCore.App.Views.BuildingObjectDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:IsoCore.App.Views"
    xmlns:domain="using:IsoCore.Domain"
    mc:Ignorable="d">

    <Grid Background="{StaticResource IcbdWindowBackgroundBrush}"
          Style="{StaticResource IcbdPageGrid}">
        <Border Style="{StaticResource IcbdDashboardCardPrimaryStyle}"
                Padding="{StaticResource IcbdPaddingL}">
            <StackPanel Spacing="{StaticResource IcbdSpacingSmall}">
                <TextBlock Text="Stavební objekt – detail"
                           Style="{StaticResource IcbdSectionHeaderText}" />

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="{StaticResource IcbdSpacingSmall}">
                        <TextBox Header="Kód"
                                 Text="{Binding Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBox Header="Název"
                                 Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <ComboBox Header="Typ konstrukce"
                                  SelectedItem="{Binding StructureType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <domain:BuildingStructureType>Unknown</domain:BuildingStructureType>
                            <domain:BuildingStructureType>Most</domain:BuildingStructureType>
                            <domain:BuildingStructureType>Propustek</domain:BuildingStructureType>
                            <domain:BuildingStructureType>Nadjezd</domain:BuildingStructureType>
                            <domain:BuildingStructureType>Jine</domain:BuildingStructureType>
                        </ComboBox>

                        <ComboBox Header="Krytí"
                                  SelectedItem="{Binding CoverType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <domain:BuildingCoverType>Unknown</domain:BuildingCoverType>
                            <domain:BuildingCoverType>Presypany</domain:BuildingCoverType>
                            <domain:BuildingCoverType>Nepresypany</domain:BuildingCoverType>
                        </ComboBox>

                        <ComboBox Header="Stav"
                                  SelectedItem="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <domain:BuildingObjectStatus>Draft</domain:BuildingObjectStatus>
                            <domain:BuildingObjectStatus>Planned</domain:BuildingObjectStatus>
                            <domain:BuildingObjectStatus>InProgress</domain:BuildingObjectStatus>
                            <domain:BuildingObjectStatus>Completed</domain:BuildingObjectStatus>
                        </ComboBox>

                        <TextBox Header="Příprava"
                                 Text="{Binding PrepType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <ToggleSwitch Header="NAIP izolace"
                                      IsOn="{Binding HasNaip, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      OnContent="Ano"
                                      OffContent="Ne" />

                        <TextBox Header="Poznámka"
                                 Text="{Binding Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True" />

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Spacing="{StaticResource IcbdSpacingMedium}">
                            <Button Content="Zrušit"
                                    Click="OnCancelClick" />
                            <Button Content="Uložit"
                                    Click="OnSaveClick" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </Border>
    </Grid>
</views:MenuPage>
