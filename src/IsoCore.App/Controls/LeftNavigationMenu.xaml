<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="IsoCore.App.Controls.LeftNavigationMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="RootControl">

    <Grid>
        <Border Style="{StaticResource IcbdPanelCard}">
            <StackPanel Padding="{StaticResource Thickness.IcbdPaddingL}"
                        Spacing="{StaticResource IcbdSpacingSmall}">
                <TextBlock Text="Hlavní"
                           Style="{StaticResource IcbdMenuSectionHeader}" />

                <Button Style="{StaticResource IcbdMenuButton}"
                        Click="OnDashboardClicked">
                    <StackPanel Orientation="Horizontal"
                                Spacing="{StaticResource IcbdSpacingSmall}"
                                VerticalAlignment="Center">
                        <TextBlock Text="Dashboard"
                                   Style="{StaticResource IcbdNavItemTextBlockStyle}" />
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource IcbdMenuButton}"
                        Click="OnProjectsClicked">
                    <StackPanel Orientation="Horizontal"
                                Spacing="{StaticResource IcbdSpacingSmall}"
                                VerticalAlignment="Center">
                        <TextBlock Text="Projekty"
                                   Style="{StaticResource IcbdNavItemTextBlockStyle}" />
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource IcbdMenuButton}"
                        Click="OnOverviewsClicked">
                    <StackPanel Orientation="Horizontal"
                                Spacing="{StaticResource IcbdSpacingSmall}"
                                VerticalAlignment="Center">
                        <TextBlock Text="Přehledy"
                                   Style="{StaticResource IcbdNavItemTextBlockStyle}" />
                    </StackPanel>
                </Button>

                <!--
                BEGIN: Temporarily removed sections (Data, Kontroling, Ceníky, Pomůcky)
                <Border Style="{StaticResource IcbdMenuDivider}" />

                <TextBlock Text="Data"
                           Style="{StaticResource IcbdMenuSectionHeader}" />

                <Button Style="{StaticResource IcbdMenuButton}"
                        Click="OnRecordsClicked">
                    <StackPanel Orientation="Horizontal"
                                Spacing="{StaticResource IcbdSpacingSmall}"
                                VerticalAlignment="Center">
                        <TextBlock Text="Záznamy"
                                   Style="{StaticResource IcbdNavItemTextBlockStyle}" />
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource IcbdMenuButton}"
                        Click="OnDiaryClicked">
                    <StackPanel Orientation="Horizontal"
                                Spacing="{StaticResource IcbdSpacingSmall}"
                                VerticalAlignment="Center">
                        <TextBlock Text="Deník"
                                   Style="{StaticResource IcbdNavItemTextBlockStyle}" />
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource IcbdMenuButton}"
                        Click="OnExportsClicked">
                    <StackPanel Orientation="Horizontal"
                                Spacing="{StaticResource IcbdSpacingSmall}"
                                VerticalAlignment="Center">
                        <TextBlock Text="Exporty"
                                   Style="{StaticResource IcbdNavItemTextBlockStyle}" />
                    </StackPanel>
                </Button>

                <Border Style="{StaticResource IcbdMenuDivider}" />

                <TextBlock Text="Kontroling"
                           Style="{StaticResource IcbdMenuSectionHeader}" />

                <Button Style="{StaticResource IcbdMenuButton}"
                        IsEnabled="False">
                    <StackPanel Orientation="Horizontal"
                                Spacing="{StaticResource IcbdSpacingSmall}"
                                VerticalAlignment="Center">
                        <TextBlock Text="Výsledovka"
                                   Style="{StaticResource IcbdNavItemTextBlockStyle}" />
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource IcbdMenuButton}"
                        IsEnabled="False">
                    <StackPanel Orientation="Horizontal"
                                Spacing="{StaticResource IcbdSpacingSmall}"
                                VerticalAlignment="Center">
                        <TextBlock Text="Cashflow"
                                   Style="{StaticResource IcbdNavItemTextBlockStyle}" />
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource IcbdMenuButton}"
                        IsEnabled="False">
                    <StackPanel Orientation="Horizontal"
                                Spacing="{StaticResource IcbdSpacingSmall}"
                                VerticalAlignment="Center">
                        <TextBlock Text="Rozvaha"
                                   Style="{StaticResource IcbdNavItemTextBlockStyle}" />
                    </StackPanel>
                </Button>

                <Border Style="{StaticResource IcbdMenuDivider}" />

                <TextBlock Text="Ceníky"
                           Style="{StaticResource IcbdMenuSectionHeader}" />

                <Button Style="{StaticResource IcbdMenuButton}"
                        IsEnabled="False">
                    <StackPanel Orientation="Horizontal"
                                Spacing="{StaticResource IcbdSpacingSmall}"
                                VerticalAlignment="Center">
                        <TextBlock Text="Materiály"
                                   Style="{StaticResource IcbdNavItemTextBlockStyle}" />
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource IcbdMenuButton}"
                        IsEnabled="False">
                    <StackPanel Orientation="Horizontal"
                                Spacing="{StaticResource IcbdSpacingSmall}"
                                VerticalAlignment="Center">
                        <TextBlock Text="Práce"
                                   Style="{StaticResource IcbdNavItemTextBlockStyle}" />
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource IcbdMenuButton}"
                        IsEnabled="False">
                    <StackPanel Orientation="Horizontal"
                                Spacing="{StaticResource IcbdSpacingSmall}"
                                VerticalAlignment="Center">
                        <TextBlock Text="Poddodavatelé"
                                   Style="{StaticResource IcbdNavItemTextBlockStyle}" />
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource IcbdMenuButton}"
                        IsEnabled="False">
                    <StackPanel Orientation="Horizontal"
                                Spacing="{StaticResource IcbdSpacingSmall}"
                                VerticalAlignment="Center">
                        <TextBlock Text="Vybavení"
                                   Style="{StaticResource IcbdNavItemTextBlockStyle}" />
                    </StackPanel>
                </Button>

                <Border Style="{StaticResource IcbdMenuDivider}" />

                <TextBlock Text="Pomůcky"
                           Style="{StaticResource IcbdMenuSectionHeader}" />

                <Button Style="{StaticResource IcbdMenuButton}"
                        IsEnabled="False">
                    <StackPanel Orientation="Horizontal"
                                Spacing="{StaticResource IcbdSpacingSmall}"
                                VerticalAlignment="Center">
                        <TextBlock Text="Pomůcky"
                                   Style="{StaticResource IcbdNavItemTextBlockStyle}" />
                    </StackPanel>
                </Button>

                <Border Style="{StaticResource IcbdMenuDivider}" />
                END: Temporarily removed sections
                -->
                <StackPanel x:Name="AdminSection"
                            Visibility="{Binding AdminSectionVisibility}">
                    <TextBlock Text="Nastavení"
                               Style="{StaticResource IcbdMenuSectionHeader}" />

                    <Button Style="{StaticResource IcbdMenuButton}"
                            Click="OnUsersClicked">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="{StaticResource IcbdSpacingSmall}"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Uživatelé"
                                       Style="{StaticResource IcbdNavItemTextBlockStyle}" />
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource IcbdMenuButton}"
                            IsEnabled="False">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="{StaticResource IcbdSpacingSmall}"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Branding"
                                       Style="{StaticResource IcbdNavItemTextBlockStyle}" />
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource IcbdMenuButton}"
                            IsEnabled="False">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="{StaticResource IcbdSpacingSmall}"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Cesty souborů"
                                       Style="{StaticResource IcbdNavItemTextBlockStyle}" />
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource IcbdMenuButton}"
                            IsEnabled="False">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="{StaticResource IcbdSpacingSmall}"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Systém"
                                       Style="{StaticResource IcbdNavItemTextBlockStyle}" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
