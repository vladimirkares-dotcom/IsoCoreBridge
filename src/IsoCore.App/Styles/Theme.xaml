<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:IsoCore.App.Controls">

    <!-- ZÁKLADNÍ BRUSHES PRO ICB DESK -->

    <SolidColorBrush x:Key="IcbdWindowBackgroundBrush" Color="#FF0D0F14"/>
    <SolidColorBrush x:Key="IcbdPanelBackgroundBrush" Color="#FF161A20"/>
    <SolidColorBrush x:Key="IcbdPanelCardBackgroundBrush" Color="#FF1F242B"/>
    <SolidColorBrush x:Key="IcbdPanelBorderBrush" Color="#26FFFFFF"/>
    <SolidColorBrush x:Key="IcbdCardBorderBrush" Color="#FF2E333C"/>
    <SolidColorBrush x:Key="IcbdSectionBorderBrush" Color="#26FFFFFF"/>
    <SolidColorBrush x:Key="IcbdMutedBackgroundBrush" Color="#FF0A0C10"/>

    <SolidColorBrush x:Key="IcbdPrimaryBrush" Color="#FFF36A1D"/>

    <SolidColorBrush x:Key="IcbdDangerBrush" Color="#FFDD3F3F"/>
    <SolidColorBrush x:Key="IcbdWarningBrush" Color="#FFF2B225"/>
    <SolidColorBrush x:Key="IcbdSuccessBrush" Color="#FF2ACF70"/>

    <SolidColorBrush x:Key="IcbdPrimaryTextBrush" Color="#FFF6F6F6"/>
    <SolidColorBrush x:Key="IcbdSecondaryTextBrush" Color="#FFB7BABF"/>
    <SolidColorBrush x:Key="IcbdMutedTextBrush" Color="#FF7A7E84"/>

    <x:Double x:Key="IcbdSpacingSmall">8</x:Double>
    <x:Double x:Key="IcbdSpacingMedium">16</x:Double>
    <x:Double x:Key="IcbdSpacingLarge">24</x:Double>

    <!-- Jediná definice Accent brush -->
    <SolidColorBrush x:Key="IcbdAccentBrush" Color="#FFFF7A1A"/>
    <SolidColorBrush x:Key="IcbdAccentMutedBrush" Color="#FFCC6615"/>

    <SolidColorBrush x:Key="IcbdWindowChromeButtonNormalBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="IcbdWindowChromeButtonPointerOverBrush" Color="#33FFFFFF"/>
    <SolidColorBrush x:Key="IcbdWindowChromeButtonPressedBrush" Color="#55FFFFFF"/>
    <SolidColorBrush x:Key="IcbdWindowChromeCloseButtonNormalBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="IcbdWindowChromeCloseButtonPointerOverBrush" Color="#33FFFFFF"/>
    <SolidColorBrush x:Key="IcbdWindowChromeCloseButtonPressedBrush" Color="#55FFFFFF"/>

    <FontFamily x:Key="IcbdDefaultFontFamily">Segoe UI</FontFamily>

    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource IcbdDefaultFontFamily}"/>
    </Style>

    <Style x:Key="IcbdTitleText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource IcbdPrimaryTextBrush}"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="IcbdSectionHeaderText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource IcbdSecondaryTextBrush}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="IcbdFieldLabel" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource IcbdSecondaryTextBrush}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>

    <Style x:Key="IcbdSectionHeader" TargetType="TextBlock" BasedOn="{StaticResource IcbdSectionHeaderText}">
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <Style x:Key="IcbdErrorText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource IcbdDangerBrush}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Margin" Value="0,2,0,8"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style x:Key="IcbdBodyText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource IcbdPrimaryTextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <Style x:Key="IcbdCaptionText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource IcbdMutedTextBrush}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <Style x:Key="IcbdPageGrid" TargetType="Grid">
        <Setter Property="Padding" Value="32"/>
        <Setter Property="RowSpacing" Value="12"/>
    </Style>

    <Style x:Key="IcbdLeftNavMargin" TargetType="controls:LeftNavigationMenu">
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

    <Style x:Key="IcbdDashboardContentStack" TargetType="StackPanel">
        <Setter Property="Spacing" Value="12"/>
    </Style>

    <Style x:Key="IcbdDashboardHeaderGrid" TargetType="Grid">
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <Style x:Key="IcbdDashboardDateText" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,4,0,0"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Opacity" Value="0.85"/>
    </Style>

    <Style x:Key="IcbdHeaderActionPanel" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Spacing" Value="8"/>
    </Style>

    <Style x:Key="IcbdHeaderCaptionText" TargetType="TextBlock" BasedOn="{StaticResource IcbdCaptionText}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Opacity" Value="0.8"/>
    </Style>

    <Style x:Key="IcbdErrorAreaStack" TargetType="StackPanel">
        <Setter Property="Spacing" Value="4"/>
    </Style>

    <Style x:Key="IcbdDashboardCardsGrid" TargetType="Grid">
        <Setter Property="ColumnSpacing" Value="12"/>
    </Style>

    <Style x:Key="IcbdDashboardLeftColumnStack" TargetType="StackPanel">
        <Setter Property="Spacing" Value="12"/>
    </Style>

    <Style x:Key="IcbdHeaderText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource IcbdPrimaryTextBrush}"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="IcbdSubheaderText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource IcbdPrimaryTextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Opacity" Value="0.8"/>
    </Style>

    <Style x:Key="IcbdListItemContainer" TargetType="StackPanel">
        <Setter Property="Padding" Value="6"/>
    </Style>

    <Style x:Key="IcbdListItemTitleText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource IcbdPrimaryTextBrush}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="IcbdListItemCaptionText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource IcbdPrimaryTextBrush}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>

    <Style x:Key="IcbdRightAlignedPrimaryButton" TargetType="Button" BasedOn="{StaticResource IcbdPrimaryButton}">
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>

    <Style x:Key="IcbdPanelCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource IcbdPanelBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource IcbdPanelBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style x:Key="IcbdSectionCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource IcbdPanelBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource IcbdPanelBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style x:Key="IcbdInputText" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource IcbdPanelBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource IcbdSectionBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{StaticResource IcbdPrimaryTextBrush}"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="FontFamily" Value="{StaticResource IcbdDefaultFontFamily}"/>
    </Style>

    <Style x:Key="IcbdInputPassword" TargetType="PasswordBox">
        <Setter Property="Background" Value="{StaticResource IcbdPanelBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource IcbdSectionBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{StaticResource IcbdPrimaryTextBrush}"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="FontFamily" Value="{StaticResource IcbdDefaultFontFamily}"/>
    </Style>

    <Style x:Key="IcbdInputCombo" TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource IcbdPanelBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource IcbdSectionBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{StaticResource IcbdPrimaryTextBrush}"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="FontFamily" Value="{StaticResource IcbdDefaultFontFamily}"/>
    </Style>

    <Style x:Key="IcbdCheckbox" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource IcbdPrimaryTextBrush}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <Style x:Key="IcbdPanelHeaderText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource IcbdPrimaryTextBrush}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <Style x:Key="IcbdPrimaryButton" TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource IcbdPrimaryTextBrush}"/>
        <Setter Property="Background" Value="{StaticResource IcbdPanelBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource IcbdAccentBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="CornerRadius" Value="6"/>
    </Style>

    <Style x:Key="IcbdWindowChromeButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="36"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource IcbdPrimaryTextBrush}"/>
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="BackgroundElement"
                                Background="Transparent"
                                CornerRadius="4"/>
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BackgroundElement"
                                                                       Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="{StaticResource IcbdWindowChromeButtonPointerOverBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BackgroundElement"
                                                                       Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="{StaticResource IcbdWindowChromeButtonPressedBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="IcbdWindowChromeCloseButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="36"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource IcbdPrimaryTextBrush}"/>
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="CloseBackground"
                                Background="Transparent"
                                CornerRadius="4"/>
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CloseBackground"
                                                                       Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="{StaticResource IcbdWindowChromeCloseButtonPointerOverBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CloseBackground"
                                                                       Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="{StaticResource IcbdWindowChromeCloseButtonPressedBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="OverviewCardStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="Margin" Value="0,0,16,16" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="#22FFFFFF" />
        <Setter Property="Background" Value="#0DFFFFFF" />
        <Setter Property="MinHeight" Value="80" />
    </Style>

    <Style x:Key="DashboardCardStyle"
           TargetType="Border"
           BasedOn="{StaticResource OverviewCardStyle}" />

</ResourceDictionary>
