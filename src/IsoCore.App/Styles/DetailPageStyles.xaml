<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Styly pro hlavičku stránky -->
    <Style x:Key="DetailHeaderStatusText" TargetType="TextBlock" BasedOn="{StaticResource IcbdBodyTextBlockStyle}">
        <Setter Property="Margin" Value="0,4,0,0" />
        <Setter Property="Opacity" Value="0.8" />
    </Style>

    <Style x:Key="DetailHeaderActionsPanel" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Spacing" Value="{StaticResource IcbdSpacingSmall}" />
    </Style>

    <Style x:Key="DetailHeaderDateText" TargetType="TextBlock" BasedOn="{StaticResource IcbdBodyTextBlockStyle}">
        <Setter Property="TextAlignment" Value="Right" />
    </Style>

    <Style x:Key="DetailBackButton" TargetType="Button" BasedOn="{StaticResource IcbdButtonSecondaryStyle}">
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Styly pro obsah a sekce -->
    <Style x:Key="DetailSectionHeader" TargetType="TextBlock" BasedOn="{StaticResource IcbdSubheaderText}">
        <Setter Property="Margin" Value="0,16,0,8" />
    </Style>
    
    <Style x:Key="DetailSectionHeaderNoBottomMargin" TargetType="TextBlock" BasedOn="{StaticResource IcbdSubheaderText}">
        <Setter Property="Margin" Value="0,16,0,0" />
    </Style>

    <Style x:Key="WrappingTextBlock" TargetType="TextBlock" BasedOn="{StaticResource IcbdBodyTextBlockStyle}">
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style x:Key="MultilineTextBox" TargetType="TextBox">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="AcceptsReturn" Value="True" />
    </Style>

    <Style x:Key="FormActionsPanel" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Spacing" Value="{StaticResource IcbdSpacingMedium}" />
    </Style>

    <!-- Styly pro seznam stavebních objektů -->
    <Style x:Key="BuildingObjectListItemPanel" TargetType="StackPanel">
        <Setter Property="Padding" Value="8" />
        <Setter Property="Spacing" Value="2" />
    </Style>

    <Style x:Key="BuildingObjectListCodeText" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="BuildingObjectListNameText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Opacity" Value="0.8" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="MaxLines" Value="1" />
    </Style>

    <Style x:Key="EmptyListPlaceholderText" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Opacity" Value="0.6" />
    </Style>

    <!-- Styly pro detail stavebního objektu (read-only) -->
    <Style x:Key="BuildingObjectDetailCodeText" TargetType="TextBlock" BasedOn="{StaticResource IcbdBodyTextBlockStyle}">
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
    </Style>

    <Style x:Key="BuildingObjectDetailNameText" TargetType="TextBlock" BasedOn="{StaticResource IcbdBodyTextBlockStyle}">
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="Opacity" Value="0.7" />
    </Style>

    <!-- Styly pro rozložení sekcí -->
    <Style x:Key="SectionContentTopMarginGrid" TargetType="Grid">
        <Setter Property="Margin" Value="0,24,0,0" />
    </Style>

    <!-- Styly pro vnitřní StackPanel s datumy v hlavičce -->
    <Style x:Key="DetailHeaderDatePanel" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Right" />
    </Style>

</ResourceDictionary>