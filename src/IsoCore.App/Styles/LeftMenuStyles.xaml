<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="IcbdMenuButton" TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource IcbdPrimaryTextBrush}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{x:Null}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Margin" Value="0,2" />
        <Setter Property="MinHeight" Value="34" />
        <Setter Property="MinWidth" Value="220" />
    </Style>

    <Style x:Key="IcbdMenuSectionHeader" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource IcbdSecondaryTextBrush}" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Opacity" Value="0.7" />
        <Setter Property="Margin" Value="4,0,0,4" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style x:Key="IcbdMenuDivider" TargetType="Border">
        <Setter Property="Height" Value="1" />
        <Setter Property="Background" Value="{StaticResource IcbdPanelBorderBrush}" />
        <Setter Property="Margin" Value="0,8,0,4" />
    </Style>
</ResourceDictionary>
